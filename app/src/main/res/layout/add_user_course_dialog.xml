<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_margin="20dp"
        android:id="@+id/edits"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_margin="2dp"
            android:hint="Name"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:ems="10"
            android:inputType="text" />



        <EditText
            android:layout_margin="2dp"
            android:layout_below="@id/course"
            android:hint="Id of usercourse to save (Optional)"
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:ems="10"
            android:inputType="text" />


        <EditText
            android:layout_margin="2dp"
            android:layout_below="@id/id"
            android:hint="Priority"
            android:id="@+id/topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:ems="10"
            android:inputType="numberDecimal" />

        <EditText
            android:layout_margin="2dp"
            android:layout_below="@id/id"
            android:hint="Years"
            android:id="@+id/years"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:ems="10"
            android:inputType="numberDecimal" />

        <EditText
            android:layout_margin="2dp"
            android:layout_below="@id/id"
            android:hint="Book Course Reference (Optional)"
            android:id="@+id/book_course_reference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:ems="10" />
        <EditText
            android:maxLength="2"
            android:layout_margin="2dp"
            android:layout_below="@id/id"
            android:hint="Current Sem"
            android:id="@+id/current_sem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:ems="10" />
    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edits">
        <Button
            android:layout_below="@+id/edits"
            android:layout_centerHorizontal="true"
            android:id="@+id/clear_ref"
            android:layout_marginStart="10dp"
            android:text="Clear Reference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:layout_below="@+id/edits"
            android:layout_centerHorizontal="true"
            android:id="@+id/upload"
            android:layout_marginStart="10dp"
            android:text="Save Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</RelativeLayout>
