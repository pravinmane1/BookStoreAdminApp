<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:id="@+id/order_card"
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    app:cardCornerRadius="12dp"
    android:layout_height="wrap_content"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:id="@+id/order_card2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/o_id"
                    android:textColor="@color/black"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:text="id: 2564456156"
                    android:layout_marginStart="50dp"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content" />
            </LinearLayout>
         <LinearLayout
             android:weightSum="10"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/name"
                 android:textColor="@color/black"
                 android:padding="4dp"
                 android:singleLine="true"
                 android:textAlignment="center"
                 android:layout_width="0dp"
                 android:layout_weight="5"
                 android:text="Pravin Mane"
                 android:layout_height="wrap_content" />
             <TextView
                 android:id="@+id/time_added"
                 android:textColor="@color/black"
                 android:padding="4dp"
                 android:singleLine="true"
                 android:text="2564456156"
                 android:textAlignment="center"
                 android:layout_width="0dp"
                 android:layout_weight="5"
                 android:layout_height="wrap_content" />
         </LinearLayout>
            <LinearLayout
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/phone"
                    android:textColor="@color/black"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:text="7057065515"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/value"
                    android:textColor="@color/black"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:text="Value :  550"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray_light"/>
            <LinearLayout
                android:weightSum="20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAlignment="center"
                    android:id="@+id/address"
                    android:padding="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:maxLength="200"
                    android:text=" Address :"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/days_left"
                    android:textAlignment="center"
                    android:padding="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:maxLength="200"
                    android:text=" Days Left :"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/method"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:text="Method : COD"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/status"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:background="@color/yellow"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:text="Placed"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>