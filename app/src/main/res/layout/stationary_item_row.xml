<androidx.cardview.widget.CardView android:id="@+id/item_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="1dp"
            android:textSize="12dp"
            android:id="@+id/brand"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Brand"
            android:textColor="@color/black"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.elyeproj.loaderviewlibrary.LoaderImageView
            app:layout_constraintTop_toBottomOf="@+id/brand"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_weight="10"
            android:layout_margin="4dp"
            android:id="@+id/pic"
            android:minHeight="80dp"
            android:minWidth="60dp"
            android:layout_width="match_parent"
            android:layout_height="70dp" />

        <LinearLayout
            android:id="@+id/container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pic"
            app:layout_constraintBottom_toTopOf="@+id/details"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/atr12"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/atr1_layout"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:padding="4dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/atr1"
                        android:drawablePadding="4dp"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="atr1"/>
                </LinearLayout>
                <View
                    android:id="@+id/SplitLine_ver1"
                    android:layout_width="1.5dp"
                    android:layout_height= "match_parent"
                    android:background="@color/lightwhite" />
                <LinearLayout
                    android:id="@+id/atr2_layout"
                    android:padding="4dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/atr2"
                        android:drawablePadding="4dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="atr2"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/splitline"
                android:layout_width="match_parent"
                android:layout_height= "1.5dp"
                android:background="@color/lightwhite" />
            <LinearLayout
                android:id="@+id/atr34"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/atr3_layout"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:padding="4dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/atr3"
                        android:drawablePadding="4dp"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="atr3"/>
                </LinearLayout>
                <View
                    android:id="@+id/SplitLine_ver2"
                    android:layout_width="1.5dp"
                    android:layout_height= "match_parent"
                    android:background="@color/lightwhite" />
                <LinearLayout
                    android:id="@+id/atr4_layout"
                    android:padding="4dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/atr4"
                        android:drawablePadding="4dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="atr4"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/container"
            android:id="@+id/details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/s_discounted_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="â‚¹ 300"
                android:textColor="@color/black"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/s_original_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="518" />


            <TextView
                android:id="@+id/s_discount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="30% off"
                android:textColor="@color/green" />
        </LinearLayout>
        <LinearLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/ll_count_layout"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/book_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="Count: 50"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_count_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">




            <TextView
                android:textColor="@color/navy"
                android:id="@+id/add_books"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="Add +" />


            <TextView
                android:textColor="@color/red"
                android:id="@+id/remove_books"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="Remove -"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>