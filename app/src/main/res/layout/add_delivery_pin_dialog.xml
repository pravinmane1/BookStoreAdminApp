<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/pincode_layout"
        android:orientation="horizontal"
        android:weightSum="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Pincode"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"/>
        <EditText
            android:id="@+id/pincode"
            android:inputType="number"
            android:maxLength="6"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="XXXXXX"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/days_for_delivery_layout"
        android:layout_below="@+id/pincode_layout"
        android:orientation="horizontal"
        android:weightSum="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Days For Delivery"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"/>
        <EditText
            android:id="@+id/days_for_delivery"
            android:inputType="number"
            android:maxLength="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="00"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/delivery_charges_layout"
        android:layout_below="@+id/days_for_delivery_layout"
        android:orientation="horizontal"
        android:weightSum="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Delivery Charges"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"/>
        <EditText
            android:id="@+id/delivery_charges"
            android:inputType="number"
            android:maxLength="3"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="₹₹₹"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"/>


    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delivery_charges_layout"
        android:text="save"
        style="?borderlessButtonStyle"
        android:background="@color/lightRed"/>
</RelativeLayout>